<?xml version="1.0" encoding="UTF-8"?><!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="5dp" android:topRightRadius="5dp"
                     />
            <stroke android:width="0.5dp" android:color="#ffa8abad"/>
        </shape>
    </item>
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="0dp">
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp" android:bottomRightRadius="0dp"
                     android:bottomLeftRadius="0dp"/>
            <stroke android:width="0.5dp" android:color="#ffffffff"/>
        </shape>
    </item>
</layer-list>